##! /usr/bin/env/sh

PID=$(pidof offlineimap)

[ -n "$PID" ] && exit 1

offlineimap -c ~/.offlineimap/offlineimaprc -o -u quiet &>/dev/null

# the notmuch-poll script is ASCII armoured because it contains a number of
# e-mail addresses
gpg -d ~/.mutt/notmuch-poll.asc 2>/dev/null | sh

exit 0

# vim:set ft=sh et sw=2 ts=2 tw=79:
