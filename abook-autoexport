#!/bin/env sh

# ----------------------------------------------------
# file:     $HOME/scripts/abook-autoexport
# author    Armin Wolfermann
# ----------------------------------------------------

# abook export script to sync abook & mutt/alias by armin wolfermann

abook --config $HOME/.abook/abookrc --datafile $HOME/.abook/addressbook ${@}
abook --convert --informat abook --infile $HOME/.abook/addressbook --outformat mutt --outfile $HOME/.mutt/aliases.new
mv $HOME/.mutt/aliases $HOME/.mutt/aliases.bak
mv $HOME/.mutt/aliases.new $HOME/.mutt/aliases

# vim:nu:ai:noet:sts=8:sw=8:ts=8:
